#!/bin/bash

pylint_score=$(\
    tools/check | \
    grep has\ been\ rated | \
    grep -o '[0-9]\+\.[0-9][0-9]' | \
    head -n 1 \
    )
echo "Adding pylint score $pylint_score to commit message:"

git commit --amend -m "$(git log --format=%B -n1 | grep -v pylint\ score)

pylint score: $pylint_score"

git log --format=%B -n1
